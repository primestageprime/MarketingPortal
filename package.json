    "eslint-plugin-svelte": "2.36.0",
    "globals": "15.0.0",
    "prettier": "3.1.1",
    "prettier-plugin-svelte": "3.1.2",
    "rollup-plugin-visualizer": "5.12.0",
    "sass": "^1.80.6",
